{% extends 'layout.html.twig' %}

{% block content %}

    <h2>{{ user.username }}</h2>

    <div>
        <p>{{ user.username }}</p>
        <p>{{ user.firstName }}</p>
        <p>{{ user.lastName }}</p>
        <p>{{ user.birthday|date("d/m/Y") }}</p>
        <p><img src="{{ asset('/uploads/profile_images/' ~ user.profilePicturePath) }}" height="120px"/></p>
        <p>{{ user.description }}</p>
        <p>{{ user.fidelity }}</p>
    </div>

    <div class="col-md-12">
        <ul class="list-group">
            <li class="list-group-item"><a href="{{ path('my_activities') }}">Ses activités créées</a></li>
            <li class="list-group-item"><a href="{{ path('my_subjects') }}">Ses sujets créés</a></li>
        </ul>
    </div>

{% endblock %}