{% extends 'admin/admin.html.twig' %}

{% block content %}
    <h4>Number of users : {{ users|length }}</h4>
    <table class="table table-striped table-hover">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Date de création</th>
            <th></th>
        </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.createdAt|date("d/m/Y H:i:s") }}</td>
            <td><a class="btn btn-danger" href="{{ path('user_disable', {'id': user.id}) }}">Désactiver</a></td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}